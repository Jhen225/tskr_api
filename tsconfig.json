{
  "compileOnSave": false,
  "compilerOptions": {
      "esModuleInterop": true,
      "allowJs": true,
      "moduleResolution": "node",
      "target": "es5",
      "sourceMap": true,
      "declaration": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipDefaultLibCheck": true,
      "outDir": "./bin/",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
          "node"
      ],
      "lib": [
        "es2017",
        "dom"
      ]
  },
  "exclude": [
      "bin",
      "node_modules",
  ]
}
